<!DOCTYPE html>
<html>
<%- include ./head %>
    <body>
    <%- include ./nav %>
    <div class="page uinfo2">
      <div class="adminPage">
        <%# 메뉴 바 %>
        <div class="menu">
          <div class="col" style="height: 50px; display: flex; align-content: center;">
            <div class="logo">국방퀴즈 관리자</div>
          </div>
          <hr>
          <div class="col">
            <div class="centerMenu">
              <div class="logo"><%= udata.uname %>님, 접속 중...</div><div style="height: 10px;"></div>
              <div class="logo">관리</div>
              <div class="menubox">
                <div class="col">
                  <a href="/admin" id="aMain" class="logo menulist" onclick="menuClick(this)" onmousemove="mouseOver(this)" onmouseout="mouseOut(this)">
                    <img src="images/menuhome.png" onerror="this.src='images/user.png'" width="30" height="30">&nbsp
                    <input type="hidden" name="mainpage">
                    메인
                  </a>
                  <a href="/notice" id="aNotice" class="logo menulist" onclick="menuClick(this)" onmousemove="mouseOver(this)" onmouseout="mouseOut(this)">
                    <img src="images/menunotice.png" onerror="this.src='images/user.png'" width="30" height="30">&nbsp
                    공지사항
                  </a>
                  <a href=/userpg id="aUser" class="logo menulist" onclick="menuClick(this)" onmousemove="mouseOver(this)" onmouseout="mouseOut(this)">
                    <img src="images/menuuser.png" onerror="this.src='images/user.png'" width="30" height="30">&nbsp
                    유저
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%# 콘텐츠 user %>
        <div class="noticeboard" style="overflow: auto;">
          <div class="logo" style="color: black; font-size: 40px;">👥사용자 관리</div>
          <form method="post" action="/adminuseredit">
            <input style="float: right;" type="submit" value="✍저장">
              <table width="100%" style="border-collapse: collapse;">
                <thead>
                  <tr style="border-bottom: 1px solid #444444;">
                    <th>이름</th>
                    <th>부대 코드</th>
                    <th>아이디</th>
                    <th>비밀번호</th>
                    <th> 🗑 </th>
                  </tr>
                </thead>
                <tbody>
                  <% for(var i = 0; i < users.length; i++){ %>
                    <tr align="center">
                      <td><input name="uname" value="<%= users[i].uname %>" type="text"></td>
                      <td><input name="uunitcode" type="text" value="<%= users[i].uunitcode %>"></td>
                      <td><input name="uid" type="text" value="<%= users[i].uid %>"></td>
                      <td><input name="upw" type="text" value="<%= users[i].upw %>"></td>
                      <td><button id="<%= i %>" onclick="javascript: form.action='/adminuserdel'; takeuid(this);">삭제</button></td>
                      <input type="hidden" id="hiddenuid<%= i %>" value="<%= users[i].uid %>">
                    </tr>
                  <% } %>
                  <input type="hidden" id="hiddenuid" name="hiddenuid" value="">
                </tbody>
              </table>
          </form>
        </div>
      </div>
    </div>
    </body>
    <script>
      function mouseOver(target){
        target.style.color = 'green';
        target.style.cursor= 'pointer';
      }

      function mouseOut(target){
        target.style.color = 'white';
      }

      document.addEventListener('scroll', () => {
          let y = window.scrollY;
          if (y > 120) {
              $('.navbar').addClass('navbar-bg');
          } else {
              $('.navbar').removeClass('navbar-bg');
          }
      });
      $('.post').click(function () {
          $('.post').find('.desc').removeClass('show');
          $(this).find('.desc').toggleClass('show');
      })

      function takeuid(target){
        let uid = document.getElementById("hiddenuid"+target.id).value;
        document.getElementById("hiddenuid").value = uid;
      }
    </script>
</html>